{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/sdhealthconnect/leap-cds/schemas/sls-request.schema.json",
  "title": "SLS Request",
  "description": "SLS Request",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "entry": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "object",
                "properties": {
                  "resourceType": {
                    "type": "string"
                  }
                },
                "required": ["resourceType"]
              }
            },
            "required": ["resource"]
          }
        },
        "resourceType": {
          "type": "string",
          "pattern": "Bundle"
        }
      },
      "required": ["entry", "resourceType"]
    },
    {
      "type": "object",
      "properties": {
        "resourceType": {
          "type": "string"
        }
      },
      "required": ["resourceType"]
    }
  ]
}
